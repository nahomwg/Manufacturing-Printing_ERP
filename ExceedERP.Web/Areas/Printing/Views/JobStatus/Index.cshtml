
@(Html.Kendo().Grid<ExceedERP.Core.Domain.Printing.ProductionFollowUp.JobStatus>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.JobId);
        columns.Bound(c => c.UserId);
        columns.Bound(c => c.Time);
        columns.Bound(c => c.Date);
        columns.Bound(c => c.JobPhase);
        columns.Bound(c => c.Status);
      })
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("JobStatuses_Read", "JobStatus"))
      )
)
