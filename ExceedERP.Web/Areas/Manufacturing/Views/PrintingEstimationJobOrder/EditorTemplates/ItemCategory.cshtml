        .OptionLabel( Resources.Select)
        .DataTextField("Name")
        .DataValueField("ItemCategoryCode")
        //    .BindTo((IEnumerable)ViewData["Items"])
        .DataSource(dataSource =>
        {
            dataSource.Read(read => read.Action("GetItemCategory", "ProductionDataProvider"));
            //.ServerFiltering(true);
        })
        .Filter("contains")
        .MinLength(2)
        .ValuePrimitive(true)
)