@model IEnumerable<ExceedERP.Core.Domain.Global.OrgBranchUserMapping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<legend>My Branches</legend>


<table class="table table-striped table-bordered table-condensed table-hover">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Branch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDefault)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDefault)
            </td>
            <td>
                @Html.ActionLink("Make Default", "MakeDefault", new { id = item.OrgBranchUserMappingID })
            </td>
        </tr>
    }

</table>
