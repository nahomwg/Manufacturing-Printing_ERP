                  .AutoBind(false)
                  .OptionLabel("--Select Country--")
                  .DataTextField("Name")
                  .DataValueField("CountryID")
                  .DataSource(dataSource =>
                  {
                      dataSource.Read(read => read.Action("GetCountry", "DataProvider"))
                                .ServerFiltering(true);
                  })

)
@Html.ValidationMessageFor(m => m)